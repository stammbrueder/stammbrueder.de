---
import { readFileSync } from 'fs';
import { fileURLToPath } from 'url';
import { join, dirname } from 'path';

const __dirname = dirname(fileURLToPath(import.meta.url));
const logoPath = join(__dirname, '../../public/images/stammbrueder-logo.svg');
const logoSvg = readFileSync(logoPath, 'utf-8');
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-brand">
        <span set:html={logoSvg.replace('<svg', '<svg class="footer-logo" aria-hidden="true"').replace(/fill="#1E1E1E"/g, 'fill="transparent"').replace(/fill="white"/g, 'fill="transparent"').replace(/fill="#2C3333"/g, 'fill="white"').replace(/fill="black"/g, 'fill="white"')}></span>
      </div>
    </div>
    <div class="footer-bottom">
      <p class="footer-made-with">Made with <svg class="footer-heart-icon" width="16" height="16" viewBox="0 0 256 256" fill="currentColor"><path d="M240,94c0,70-103.79,126.66-108.21,129a8,8,0,0,1-7.58,0C119.79,220.66,16,164,16,94A62.07,62.07,0,0,1,78,32c20.65,0,38.73,8.88,50,23.89C139.27,40.88,157.35,32,178,32A62.07,62.07,0,0,1,240,94Z"/></svg> in Leipzig</p>
      <div class="footer-bottom-links">
        <a href="/datenschutz/">Datenschutz</a>
        <a href="/impressum/">Impressum</a>
      </div>
    </div>
  </div>
</footer>
